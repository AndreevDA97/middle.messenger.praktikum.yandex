{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "declaration": false,
    "module": "es6",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  },
  "files": ["src/index.ts"],
  "include": ["src", "jest.config.ts"]
}

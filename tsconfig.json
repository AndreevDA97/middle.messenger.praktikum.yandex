{
  "compilerOptions": {
    // основные настройки
    "outDir": "dist",
    "target": "es2017",
    "declaration": false,
    //"module": "commonjs",
    "module": "ES6",
    "moduleResolution": "node",
    // расширенные настройки
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "strictNullChecks": true
  }
}

<section class="sidebar-header">
    <div class="sidebar-header-status">
        <div class="sidebar-header-status__avatar"></div>
        <div class="sidebar-header-status__profile">
            <a href="user-profile.hbs">Профиль <span class="icon icon_next"></span></a>
        </div>
        <div class="sidebar-header-status__user-add {{#if profile}}sidebar-header-status__user-add_active{{/if}}">
            <span class="icon icon_user-add"></span>
        </div>
    </div>
    <div class="sidebar-header-search">
        <input type="text" placeholder="Поиск" value="{{search}}">
        <span class="icon icon_search"></span>
    </div>
    <hr>
</section>
<section class="sidebar-contacts">
    {{#if search}}
        <div class="sidebar-contacts__item">
            <div class="sidebar-contact">
                <div class="sidebar-contact__avatar"></div>
                <div class="sidebar-contact__founded">Киноклуб</div>
            </div>
        </div>
    {{else}}
        {{#each contacts}}
            <div class="sidebar-contacts__item {{#if isActive}}sidebar-contacts__item_active{{/if}}">
                <div class="sidebar-contact">
                    <div class="sidebar-contact__avatar"></div>
                    <div class="sidebar-contact__username">{{user}}</div>
                    <div class="sidebar-contact__message {{#if isMsgOwner}}sidebar-contact__message_owner{{/if}}">{{message}}</div>
                    <div class="sidebar-contact__time">{{time}}</div>
                    {{#if count}}
                        <div class="sidebar-contact__count">{{count}}</div>
                    {{/if}}
                </div>
            </div>
            <hr>
        {{/each}}
    {{/if}}
</section>